<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset='utf-8'>
  <title><%= document.title %></title>
    <%- getBlock("meta").toHTML() %>
    <%- getBlock("styles").add(['http://fonts.googleapis.com/css?family=Roboto:400,300,100,700','http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,100,700', site.root + 'bootstrap/css/bootstrap.min.css', site.root + 'css/template.css'].concat((document.extracss || []).map(p => site.root + p))).toHTML() %>
  <meta name="viewport" content=
  "width=device-width, initial-scale=1.0">
</head>
<body>
  <header>
    <nav>
      <div class="container"><% if (document.relativePath !== 'index.html') { %><a href="<%= site.root %>"><% } %><img src=
      "<%= site.root %>img/W3C-Developers-Light.svg" height="60" alt=
      "W3C Developers"><% if (document.relativePath !== 'index.html') { %></a><% } %></div>
    </nav>
    <div id="hero">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1 class="motto"><%- document.motto %></h1>
            <p><a class="explore" data-scroll="" href=
            "#<%= document.mainactionid %>"><%= document.mainaction %></a></p>
          </div>
        </div>
      </div>
    </div>
  </header>
          <%- content %>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <a href="http://www.w3.org"><img src="<%= site.root %>img/w3c.svg"
          height="50" alt="W3C"></a>
        </div>
        <div class="col-xs-6 col-sm-3">
          <h4>Explore</h4>
          <ul>
            <li>
              <a href="http://www.w3devcampus.com/">W3DevCampus</a>
            </li>
            <li>
              <a href="https://www.edx.org/school/w3cx">W3Cx</a>
            </li>
            <% if (document.relativePath !== 'tools/index.html') { %>
            <li>
              <a href="<%= site.root %>tools/">Developers Tools</a>
            </li>
            <% } %>
            <% if (document.relativePath !== 'get-involved/index.html') { %>
            <li>
              <a href="<%= site.root %>get-involved/">Get Involved</a>
            </li>
            <% } %>
            <li>
              <a href="http://testthewebforward.org/">Test the Web
              Forward</a>
            </li>
          </ul>
        </div>
        <div class="col-xs-6 col-sm-3">
          <h4>Connect</h4>
          <ul>
            <li>
              <a href="https://twitter.com/w3cdevs">Twitter</a>
            </li>
            <li>
              <a href="https://github.com/w3c">Github</a>
            </li>
            <li>
              <a href=
              "mailto:site-comments@w3.org?Subject=[W3C%20Developers]">
              site-comments@w3.org</a>
            </li>
          </ul>
        </div>
        <div class="col-xs-12 col-sm-3">
          <h4>More</h4>
          <ul>
            <li>
              <a href="http://www.w3.org/support">Donate</a>
            </li>
            <li>
              <a href="https://www.w3.org">W3C Website</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="copyright">Copyright © 2015-2016 <a href=
          "https://www.w3.org">W3C ®</a> (<a href=
          "http://www.csail.mit.edu/">MIT</a>, <a href=
          "http://www.ercim.eu/">ERCIM</a>, <a href=
          "http://www.keio.ac.jp/">Keio</a>, <a href=
          "#">Beihang</a>)<br>
          <a href=
          "http://www.w3.org/Consortium/Legal/2002/ipr-notice-20021231">
          Usage policies apply</a>.</p>
        </div>
      </div>
    </div>
  </footer>
  <script src="<%= site.root %>js/smooth-scroll.min.js"></script>
	<script>
	    smoothScroll.init();
	</script>
</body>
</html>
